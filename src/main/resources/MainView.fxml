<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.201"
            fx:controller="grainGrowth.controller.MainViewController">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#loadSpace" text="Load File..."/>
                    <MenuItem mnemonicParsing="false" onAction="#saveSpace" text="Save As..."/>
                    <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Exit"/>
                </Menu>
            </MenuBar>
            <ScrollPane minViewportHeight="900.0" minViewportWidth="1024.0" prefHeight="200.0" prefWidth="200.0">
                <BorderPane style="-fx-border-color: BLACK;">
                    <center>
                        <Canvas fx:id="canvas" height="600.0" width="600.0"/>
                    </center>
                </BorderPane>
            </ScrollPane>
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="200.0"/>
        <VBox prefHeight="512.0" prefWidth="200.0">
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="21.0" prefWidth="283.0" text="Space Size"
                   textAlignment="CENTER"/>
            <HBox prefHeight="36.0" prefWidth="200.0">
                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="49.0" text="X: "/>
                <TextField prefHeight="26.0" prefWidth="100.0" fx:id="xSizeTextField"/>
                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="65.0" text="Y: "/>
                <TextField fx:id="ySizeTextField" prefHeight="26.0" prefWidth="100.0"/>
            </HBox>
            <Button fx:id="initializeButton" mnemonicParsing="false" onAction="#initializeEmptySpace" prefHeight="31.0"
                    prefWidth="224.0" text="Initialize Empty Space">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Button>
            <Label fx:id="spaceSizeLabel" alignment="CENTER" prefHeight="18.0" prefWidth="200.0"/>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="306.0" text="Number of Nucleons"/>
            <TextField fx:id="nucleonsNumberTextField" alignment="CENTER"/>
            <Button fx:id="generateNucleonsButton" mnemonicParsing="false" onAction="#generateNucleons"
                    prefHeight="26.0" prefWidth="282.0" text="Generate">
                <VBox.margin>
                    <Insets top="5.0"/>
                </VBox.margin>
            </Button>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="306.0" text="Number of Inclusions"/>
            <TextField fx:id="inclusionsNumberTextField" alignment="CENTER"/>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="306.0" text="Inclusions Size"/>
            <TextField fx:id="inclusionSizeTextField" alignment="CENTER"/>
            <ComboBox fx:id="inclusionTypeComboBox" prefWidth="500.0"/>
            <Button fx:id="generateInclusionsButton" mnemonicParsing="false" onAction="#generateInclusions"
                    prefHeight="26.0" prefWidth="282.0" text="Generate">
                <VBox.margin>
                    <Insets top="5.0"/>
                </VBox.margin>
            </Button>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="250.0" text="Simulation Type">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Label>
            <ComboBox fx:id="simulationTypeComboBox" prefHeight="26.0" prefWidth="250.0">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </ComboBox>
            <Label fx:id="probabilityTitleLabel" alignment="CENTER" prefHeight="18.0" prefWidth="250.0"
                   text="Probability of Fourth Rule">
                <VBox.margin>
                    <Insets top="5.0"/>
                </VBox.margin>
            </Label>
            <Slider fx:id="probabilitySlider" value="50.0"/>
            <Label fx:id="probabilityLabel" alignment="CENTER" prefHeight="18.0" prefWidth="250.0"/>
            <Button fx:id="performGrainGrowthButton" mnemonicParsing="false" onAction="#performGrainGrowth"
                    prefHeight="26.0" prefWidth="288.0" text="Perform Simulation">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>
</AnchorPane>
